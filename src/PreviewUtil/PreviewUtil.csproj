<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <!-- WinExe -->
	  <OutputType Condition="'$(OS)' == 'Windows_NT'">WinExe</OutputType>
	  <OutputType Condition="'$(IsWindows)' == 'true'">WinExe</OutputType>
	  <OutputType Condition="'$(IsLinux)' == 'true'">Exe</OutputType>
	  <OutputType Condition="'$(IsMacOS)' == 'true'">Exe</OutputType>
    
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\WebWindow\WebWindow.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="wwwroot\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
