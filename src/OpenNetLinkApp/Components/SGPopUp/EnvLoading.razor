@inject IJSRuntime JSRuntime
<div class="modal fade" id="modal-envloading" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-default1">
        <div class="modal-content">
            <div class="modal-header-default">
                <div class="modal-title"><i class="fas fa-cog mr-1 blue-txt"></i>환경정보 확인</div>
                <!--<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>-->
            </div>
            <div class="modal-body-default">
                <!-- content -->
                <div class="text-center alert_txt ">
                    환경정보를 확인중 입니다.<br>
                    잠시만 기다려 주세요.

                </div>
                <!--/. content -->
            </div>
            <div class="modal-footer-default">
                <button @onclick="closePopUp" type="button" class="btn bg-gradient-primary pl-4 pr-4 mr-0  float-right">확인</button>
                <!--<button type="button" class="btn bg-gradient-secondary pl-4 pr-4 mr-0  float-right">닫기</button>>-->
            </div></div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@code {
    public async Task openPopUp()
    {
        object[] param = { "modal-envloading" };
        await JSRuntime.InvokeAsync<object>("openPopUp", param);
    }

    public void closePopUp()
    {
        object[] param = { "modal-envloading" };
        JSRuntime.InvokeAsync<object>("closePopUp", param);
    }
}