            <input type="file" id="fileInput2" multiple ondrop="ondropInput('fileInput2');" style="display:none;" />
            <input type="file" id="fileInput3" multiple ondrop="ondropInput('fileInput3');" style="display:none;" />
            <input type="file" id="fileInput4" multiple ondrop="ondropInput('fileInput4');" style="display:none;" />
