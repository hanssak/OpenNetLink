            <input type="file" id="fileInput10" multiple ondrop="ondropInput('fileInput10');" style="display:none;" />
        
        @if ((fileTypeError || fileSizeError))
        {
            <ul class="validation-errors mb-0">
                @if (fileTypeError)
                {
                    <li class="validation-message" style="font-size:14px;">Only image files are accepted.</li>
                }
                @if (fileSizeError)
                {
                    <li class="validation-message" style="font-size:14px;">The max file size is @MaxFileSizeMB MB.</li>
                }
            </ul>
        }

        @if (HsStreamList != null && HsStreamList.Count > 0)
        {
            <table id="example2" class="table table-head-fixed table-hover mb-0" style="font-size: 14px;table-layout: fixed;">
                <thead>
                    <tr>
                        <th style="width:40%;white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">@strFileName</th>                 <!--파일명-->
                        <th width="10%">@strFileSize</th>                 <!--크기-->
                        <th width="10%">@strFileType</th>                 <!--유형-->
                        <th width="20%">@strLastModDay</th>               <!--수정한 날짜-->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in HsStreamList)
                    {
                        <tr style="height:20px;">
                            <td style="width:40%;white-space: nowrap; text-overflow: ellipsis; overflow: hidden;" alt="@file.FileName" title="@file.FileName">@file.FileName</td>
                            <td width="10%">@getSizeStr(file.Length)</td>
                            <td width="10%">@file.Type</td>
                            <td width="20%">@file.ModifyTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {

            <p style="font-size:15px;">
                <br /><br /><br /><br />
                @((MarkupString)strFileDragInfo)         <!--파일을 이곳으로 드래그 하세요.-->
            </p>

        }
    </div>
</DropTarget>

