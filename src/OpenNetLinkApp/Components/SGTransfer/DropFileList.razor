                        hsStream.RelativePath = hsStream.RelativePath.Replace("/", "\\");
                    }
                    else
                    {
                        hsStream.RelativePath = hsStream.RelativePath.Replace("\\", "/");
                    }
                    //hsStream.RelativePath = hsStream.RelativePath.Replace("/", "\\");

                    if (fInfo.Name.LastIndexOf(".") > -1)
