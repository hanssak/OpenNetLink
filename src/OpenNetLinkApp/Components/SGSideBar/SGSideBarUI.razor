    {

        if (strinterFace.Length < 3)
        {
            CLog.Here().Information($"LoginGpkiAfterMenuAdd, input - invalid");
            return;
        }

        int nGroupId = -1;
        int nResult = 0;

        try
        {
            string[] strParam = strinterFace.Split(':');

            if ((strParam?.Length ?? 0) != 2)
            {
                CLog.Here().Information($"LoginGpkiAfterMenuAdd, Parsing - invalid");
                return;
