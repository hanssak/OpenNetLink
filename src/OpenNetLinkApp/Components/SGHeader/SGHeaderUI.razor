            <p class="text-sm">@AlarmItem.Body</p>
            <span class="float-right text-muted text-sm"><i class="far fa-clock mr-1"></i>@(AlarmItem.Time.Value.ToString("yyyy/MM/dd hh:mm:ss"))</span>
            </a>
            <div class="dropdown-divider"></div>
