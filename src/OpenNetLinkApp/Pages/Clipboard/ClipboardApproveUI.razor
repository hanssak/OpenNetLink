    public void ApprDetailSearch(string transSeq)
    {

        ISGSideBarUI sgSideBar = SideBarUISvc.ActiveMenu;
        int groupID = 0;
        if (sgSideBar != null)
            groupID = sgSideBar.GroupId;

        if (pageService.GetConnectStatus(groupID) == false)
        {
            string strMsg = XmlConf.GetErrMsg("E_0218");           // 현재 오프라인 상태입니다./r/n재접속 중이오니 잠시만 기다려 주십시요.
            strMsg = strMsg.Replace("/r/n", "<br>");
            ShowMessage("error", strMsg);
            return;
        }

        SGApprManageData sgData = (SGApprManageData)HSCmdCenter.GetApprManageData(groupID);
        if (sgData == null)
        { return; }

        List<object> approvalInfoList = sgData.GetTagDataObjectList("approval_info_list");
        if (approvalInfoList?.Count <= 0)
            return;
       
        foreach (object approvalInfo in approvalInfoList)
        {
            string seq = approvalInfo.GetTagDataString("trans_req", "trans_seq").ToString();
            if (transSeq == seq)
            {
               refApprovePopUp.SetBindingData(ApprDataConverter, approvalInfo);//   , tData.ApproverName, tData.ApvStatus, tData.ApvTime);
               OpenDetail(transSeq).Wait();
                break;
            }
        }
    }

