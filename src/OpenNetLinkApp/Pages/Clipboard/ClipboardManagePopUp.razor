                string sRejectReason = data.m_strRejectReason;
                apprHList.Add(new ApprHist(sName, sApprStatus, sApprDay, sRejectReason));
            }
        }

        m_bTransCancel = (!sgDetailData.GetTransCancelEnable());
        StateHasChanged();
    }

