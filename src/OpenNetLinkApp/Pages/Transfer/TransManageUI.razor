    /// <param name="item"></param>
    public void CheckStateUpdate(transData item)
    {
        int nCount = ListData.Count;
        for (int i = 0; i < nCount; i++)
        {
            transData temp = ListData[i];
            if (temp.TransSeq.Equals(item.TransSeq))
            {
