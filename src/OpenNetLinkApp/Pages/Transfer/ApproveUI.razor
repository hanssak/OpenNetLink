        {
            ShowMessage("error", e.strMsg);
            return;
        }

        ListData.Clear();

        SGLoginData sgLoginData = (SGLoginData)HSCmdCenter.GetLoginData(groupId);
        if (sgLoginData == null)
            return;

        SGApprManageData sgData = (SGApprManageData)HSCmdCenter.GetApprManageData(groupId);
        if (sgData == null)
            return;

        nTotalPages = sgData.GetTotalPageCount();
        string strUserSeq = sgLoginData.GetUserSequence();

        List<object> approvalInfoList = sgData.GetTagDataObjectList("approval_info_list");
