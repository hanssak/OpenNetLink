    public void CheckStateUpdate(approveData item)
    {
        int nCount = ListData.Count;
        for (int i = 0; i < nCount; i++)
        {
            approveData temp = ListData[i];
            if (temp.TransSeq.Equals(item.TransSeq))
            {
                temp.bCheck = !temp.bCheck;
                ListData[i] = temp;
                break;
            }
        }
        StateHasChanged();

    }
