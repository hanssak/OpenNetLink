            aData.ApvTime = ApprDataConverter.GetQueryApprDay(approvalInfo);                        // 승인일
                                                                                //aData.TransStatusCode = sgData.GetTransStatusCode(dic);        // 전송상태 원본 코드( W : 전송대기, S : 수신완료, C: 전송취소, F : 전송실패, V : 검사중 )
