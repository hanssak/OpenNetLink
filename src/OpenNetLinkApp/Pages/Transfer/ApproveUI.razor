        if (sgSideBar != null)
            groupID = sgSideBar.GroupId;

        SGApprManageData sgData = (SGApprManageData)HSCmdCenter.GetApprManageData(groupID);
        if (sgData == null)
            return null;

        List<object> approvalInfoList = sgData.GetTagDataObjectList("approval_info_list");
        if (approvalInfoList?.Count <= 0)
            return null;


        foreach (object approvalInfo in approvalInfoList)
        {
            string seq = approvalInfo.GetTagDataString("trans_req", "trans_seq");
            if (transSeq == seq)
            {
                JObject info = (JObject)approvalInfo;

                Dictionary<string, object> dic = info?.ToObject<Dictionary<string, object>>();
                if (dic == null)
                    return null;
                else
                    return dic;
            }
        }
        return null;
    }

