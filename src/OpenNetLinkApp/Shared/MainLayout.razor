        //   clientUpdateExe();
    }
    private void OpenDownloadUpdate()
    {
        refSGDownloadUpdate.OpenPopUp("");
    }
    private void CloseDownloadUpdate()
    {
        refSGDownloadUpdate.ClosePopUp();
    }


}